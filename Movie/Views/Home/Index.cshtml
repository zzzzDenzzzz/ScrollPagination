@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Cinema>

<div class="text-center">
    <h1 class="display-4">Movie search</h1>
    <form asp-action="Search" asp-controller="Home" method="get" class="input-group mb-3">
        <input required name="title" type="text" class="form-control" placeholder="Title" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
    </form>

    @if (Model.Count() > 0)
    {
        <h1>Recent movies </h1>
        <div class="row">
            @foreach (Cinema item in @Model)
            {
                <div class="col-2">
                    <partial name="_MovieCardPartial" model="@item"></partial>
                </div>
            }
        </div>
    }
</div>

@section Farid{

    <script>
        $('h1').click(function () {
            $(this).text("Clicked");
        });
    </script>
}
